{
  "name": "@opus/tiptap-solid",
  "version": "1.1.0",
  "description": "TipTap v2 integration for Solid.js",
  "type": "module",
  "private": false,
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "prepublish": "npm run build"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "solid": "./dist/index.jsx",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*/index.d.ts",
      "solid": "./dist/*/index.jsx",
      "default": "./dist/*/index.js"
    },
    "./src/*": "./src/*"
  },
  "keywords": [
    "tiptap",
    "wysiwyg",
    "solid",
    "solidjs"
  ],
  "license": "MIT",
  "dependencies": {
    "@tiptap/extension-bubble-menu": "^2.22.3",
    "@tiptap/extension-floating-menu": "^2.22.3",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@tiptap/core": "^2.22.3",
    "@tiptap/pm": "^2.22.3",
    "esbuild-plugin-solid": "^0.6.0",
    "solid-js": "^1.8.20",
    "tsup": "^8.5.0",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.22.3",
    "@tiptap/pm": "^2.22.3",
    "solid-js": "^1.8.20"
  }
}
